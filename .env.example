# ========================================
# Logging Configuration
# ========================================
# Log level: DEBUG | INFO | WARN | ERROR | SILENT
# Development default: DEBUG, Production default: INFO
NEXT_PUBLIC_LOG_LEVEL=INFO

# ========================================
# Sentry Configuration
# ========================================
# Get your DSN from https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org_here
SENTRY_PROJECT=your_sentry_project_here

# Suppress Sentry warnings (optional)
# SENTRY_SUPPRESS_INSTRUMENTATION_FILE_WARNING=1

# ========================================
# Analytics Configuration
# ========================================
# Google Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# ========================================
# Newsletter/Email Subscription Configuration
# ========================================
# Choose ONE provider and fill in its credentials
# Delete or comment out credentials for providers you're not using

# Mailchimp (Recommended - Free tier available)
# Get API Key: https://mailchimp.com/account/
# MAILCHIMP_API_KEY=your_api_key_here
# MAILCHIMP_API_SERVER=us1  # e.g. us1, us2, eu1
# MAILCHIMP_AUDIENCE_ID=your_audience_id_here

# Buttondown
# Get API Key: https://buttondown.email/settings/api
# BUTTONDOWN_API_URL=https://buttondown.email/v1/subscribers
# BUTTONDOWN_API_KEY=your_api_key_here

# ConvertKit
# Get API Key: https://convertkit.com/account/settings
# CONVERTKIT_API_URL=https://api.convertkit.com/v3/
# CONVERTKIT_API_KEY=your_api_key_here
# CONVERTKIT_FORM_ID=your_form_id_here

# Klaviyo
# Get API Key: https://www.klaviyo.com/account
# KLAVIYO_API_KEY=your_api_key_here
# KLAVIYO_LIST_ID=your_list_id_here

# Revue (Acquired by Twitter)
# Get API Key: https://www.getrevue.co/
# REVUE_API_URL=https://www.getrevue.co/api/v2/
# REVUE_API_KEY=your_api_key_here

# EmailOctopus
# Get API Key: https://emailoctopus.com/api
# EMAILOCTOPUS_API_URL=https://emailoctopus.com/api/1.6/
# EMAILOCTOPUS_API_KEY=your_api_key_here
# EMAILOCTOPUS_LIST_ID=your_list_id_here

# Giscus Comments Configuration
# Get these from https://giscus.app/
NEXT_PUBLIC_GISCUS_REPO=your_github_repo
NEXT_PUBLIC_GISCUS_REPOSITORY_ID=your_repo_id
NEXT_PUBLIC_GISCUS_CATEGORY=Announcements
NEXT_PUBLIC_GISCUS_CATEGORY_ID=your_category_id

# Utterances Comments Configuration (optional alternative)
NEXT_PUBLIC_UTTERANCES_REPO=

# Disqus Comments Configuration (optional alternative)
NEXT_PUBLIC_DISQUS_SHORTNAME=